# Telegram Bot Configuration
# 1. Open Telegram and search for @BotFather
# 2. Send /newbot and follow instructions
# 3. Copy the token here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram Chat ID
# 1. Start a chat with your bot
# 2. Send /start
# 3. The app will automatically detect your chat ID
# OR visit https://api.telegram.org/bot<TOKEN>/getUpdates after messaging the bot
TELEGRAM_CHAT_ID=your_chat_id_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Check interval in minutes (how often to check stock)
CHECK_INTERVAL_MINUTES=5

# Keyword watch check interval in minutes
KEYWORD_CHECK_INTERVAL_MINUTES=15

# Auto-purchase settings (CAREFUL - set to true only when ready!)
AUTO_PURCHASE_ENABLED=false
